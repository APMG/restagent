{
    "name": "inadarei/restagent",
    "version": "2.0.0",
    "type": "library",
    "description": "RestAgent is an HTTP/HTTPS client library for PHP.",
    "homepage": "https://github.com/inadarei/restagent",
    "license": "MIT",
    
    
    "require": {
        "php": ">=5.3.2"
    },
    "require-dev": { 
        "phpunit/phpunit": "~4.1.4",
        "satooshi/php-coveralls": "dev-master"
    },
    "scripts" : {
      "test" : "cd tests && php ../vendor/phpunit/phpunit/phpunit .",
      "coveralls" : "mkdir -p build/logs && php vendor/bin/coveralls -v"
    },

    "autoload": {
        "psr-4": {
            "Restagent\\": "lib/"
        }
    }
}
