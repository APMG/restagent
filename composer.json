{
    "name": "inadarei/restagent",
    "type": "library",
    "description": "RestAgent is an HTTP/HTTPS client library for PHP.",
    "homepage": "https://github.com/inadarei/restagent",
    "license": "MIT",
    "authors": [
        {
            "name": "Irakli Nadareishvili",
            "homepage": "http://freshblurbs.com"
        }
    ],
    
    
    "require": {
        "php": ">=5.3.2"
    },
    "require-dev": { 
        "phpunit/phpunit": "~4.1.4",
        "satooshi/php-coveralls": "dev-master"
    },
    "scripts" : {
      "test" : "vendor/bin/phpunit -c 'tests/phpunit.xml' tests",
      "coveralls" : "composer test && php vendor/bin/coveralls"
    },

    "autoload": {
        "psr-4": {
            "Restagent\\": "src/"
        }
    },
    
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
